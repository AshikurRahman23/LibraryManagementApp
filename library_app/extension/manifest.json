{
  "manifest_version": 3,
  "name": "Library Suggestion Helper",
  "version": "1.0",
  "description": "Detect book titles on pages and suggest them to your Library system.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}